@model Suspect
<!-- Add this to your HTML file to include SweetAlert2 -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/site.js"></script>
@*To display notifications*@
<partial name="_Notifications" />
<div class="card shadow-border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Add New Suspect</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="AddSuspects" id="create">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div border p-3 mt-4>
                            <div class="mb-3">
                                <label asp-for="SuspectId"></label>
                                <input asp-for="SuspectId" class="form-control" placeholder="ID Number" id="id" maxlength="13" onkeypress="return allowDigits(event)" onpaste="pasteDigits(event,'id',13)" required />
                                <span asp-validation-for="SuspectId" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="First Name" id="name" maxlength="20" onkeypress="return allowAlphabets(event)" onkeyup="letterCapitalize('name')" onpaste="pasteAlphabets(event,'name',20)" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" maxlength="20" id="surname" onkeypress="return allowAlphabets(event)" onkeyup="letterCapitalize('surname')" onpaste="pasteAlphabets(event,'surname',20)" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
   @*                          <div class="mb-3">
                                <button type="submit" class="btn btn-primary w-100">Submit</button>
                            </div>
                            <a href="/Suspect/Index" class=" btn btn-primary"><i class="bi bi-arrow-left-square w-100"> Go Back</i></a> *@
                            <p id="create-status"></p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <a href="/Suspect/Index" class=" btn btn-primary w-100"><i class="bi bi-arrow-left-square w-100"> Go Back</i></a>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-primary w-100" type="submit"><i class="bi bi-save"></i> Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

