@if (IsDivDisplayed)
{
    <div class="mt-3 w-100 alert-box">
        <div class="row">
            <div class="col-md-12 text-end">
                <div class="hover-btn">
                    <button class="btn btn-close" @onclick="HideMessage"></button>
                    <span>Dismiss</span>
                </div>
            </div>

        </div>
        <div class="text-center">
            <span class="alert-icon">
                <img src="../Images/success-icon.png" alt="info icon" height="50px" width="50px" />
            </span>
        </div>
        <div class="alert-message">
            @Message @MarkupMessage
        </div>

    </div>
}

@code {
    [Parameter]
    public string? Message { get; set; }
    [Parameter]
    public MarkupString MarkupMessage { get; set; }
    [Parameter]
    public bool IsDivDisplayed { get; set; } = true;
    [Parameter]
    public EventCallback<bool> IsDivDisplayedChanged { get; set; } // Add an EventCallback

    private void HideMessage()
    {
        IsDivDisplayed = false;
        IsDivDisplayedChanged.InvokeAsync(IsDivDisplayed); // Notify the parent component
    }
}
